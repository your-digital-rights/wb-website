{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SeoPages",
  "type": "object",
  "additionalProperties": false,
  "required": ["pages"],
  "properties": {
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "slug",
          "language",
          "pageTitle",
          "metaDescription",
          "targetKeywords",
          "headers",
          "structuredData"
        ],
        "properties": {
          "slug": {
            "type": "string"
          },
          "language": {
            "type": "string"
          },
          "pageTitle": {
            "type": "string"
          },
          "metaDescription": {
            "type": "string"
          },
          "targetKeywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "headers": {
            "type": "object",
            "additionalProperties": false,
            "required": ["h1", "h2"],
            "properties": {
              "h1": {
                "type": "string"
              },
              "h2": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "structuredData": {
            "type": "object",
            "required": [
              "@context",
              "@type",
              "name",
              "logo",
              "contactPoint"
            ],
            "properties": {
              "@context": {
                "type": "string",
                "const": "https://schema.org"
              },
              "@type": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "logo": {
                "type": "string"
              },
              "contactPoint": {
                "type": "object"
              }
            },
            "additionalProperties": true
          }
        }
      }
    }
  }
}
